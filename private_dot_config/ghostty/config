# Ghostty Terminal Configuration
# Documentation: https://ghostty.org/docs/config

# === Font Configuration ===
font-family = JetBrains Mono
font-style = Bold
font-size = 25

# === Theme ===
theme = Catppuccin Frappe

# === Cursor ===
cursor-style = bar
cursor-style-blink = true

# === Window Settings ===
# Hide macOS title bar (keeps rounded corners and borders)
macos-titlebar-style = tabs

# Disable close confirmation prompts
confirm-close-surface = false

# New windows inherit working directory from current window
window-inherit-working-directory = true

# === Shell Integration ===
# Auto-detect and inject shell integration for prompt marking,
# working directory reporting, command status, etc.
shell-integration = zsh

# === Keybindings ===
# Note: Most WezTerm keybinds are already defaults in Ghostty:
# - ⌘D = new_split:right (horizontal split)
# - ⌘⇧D = new_split:down (vertical split)
# - ⌘Enter = toggle_fullscreen
# We only need to add F11 for fullscreen toggle:

# Quake-style dropdown terminal (global keybind)
# Press ⌘` from anywhere to toggle quick terminal
keybind = global:super+grave_accent=toggle_quick_terminal

# === Additional Quality-of-Life Settings ===
# Don't copy to clipboard on selection (macOS default behavior)
copy-on-select = false

# Confirm before quitting Ghostty entirely (when closing last window)
quit-after-last-window-closed = true
